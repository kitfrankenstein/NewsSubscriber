<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/news_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="100dp"
        android:layout_alignTop="@+id/news_imageView"
        android:textColor="#000"
        android:textSize="16sp"
        android:gravity="center_vertical"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/news_time"
        android:layout_alignLeft="@+id/news_time"
        android:layout_alignStart="@+id/news_time"
        android:gravity="center_vertical"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/news_imageView"
        android:layout_alignLeft="@+id/news_title"
        android:layout_alignStart="@+id/news_title"
        android:gravity="bottom"
        android:textColor="#708090"
        android:textSize="10sp" />


</RelativeLayout>