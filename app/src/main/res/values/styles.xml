<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/c1olorAccent</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@drawable/batstart</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 实现了 ListView 的上拉加载的 SwipeRefreshLayouot. -->
    <declare-styleable name="SwipeFlushView">
        <!-- 是否允许 下拉刷新. -->
        <attr name="flushingEnable" format="boolean" />
        <!-- 是否允许 上拉加载. -->
        <attr name="loadingEnable" format="boolean" />
        <!-- 是否需要 自动刷新. -->
        <attr name="autoFlushing" format="boolean" />
        <!-- 上拉加载的模式，上滑到底部后 是否 直接加载. -->
        <attr name="autoLoading" format="boolean" />
    </declare-styleable>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorCheck</item>
        <item name="android:colorControlNormal">@color/colorUnCheck</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency) switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/colorCheck</item>

        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/colorUnCheck</item>

        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色 30%这个颜色 -->
        <item name="android:colorForeground">@color/colorPrimary</item>

        <!--使用方法： 在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

</resources>
